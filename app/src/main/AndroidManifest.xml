<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.eventmanagementsystemems">

    <!-- Permissions (must be outside the <application> tag) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.EventManagementSystemEMS">

        <activity android:name=".PendingApplicationActivity" />
        <activity android:name=".PendingRequestsActivity" />
        <activity android:name=".RejectedRequestsActivity" />
        <activity android:name=".accounts.admin.AdminHomeActivity" />
        <activity
            android:name=".accounts.login.AdminLoginActivity"
            android:exported="false" />
        <activity android:name=".WelcomeScreen" />
        <activity android:name=".accounts.login.LoginActivity" />
        <activity android:name=".accounts.login.SignUpActivity" />
        <activity android:name=".accounts.login.EnterOrganizationActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateEventActivity" />
        <activity android:name=".accounts.organizer.OrganizerHomeActivity" />
        <activity android:name=".ViewEventsActivity" />
        <activity android:name=".EventDetailActivity" />
        <activity android:name=".AttendeeViewEventsActivity" />
        <activity android:name=".AttendeeEventDetailActivity" />
        <activity android:name=".AttendeeRegisteredEventsActivity" />

        <!-- BroadcastReceiver for notification -->
        <receiver android:name=".notifications.ReminderBroadcastReceiver"
            tools:ignore="MissingClass" />
    </application>

</manifest>
